<%- include('../includes/head.ejs') %>
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
      <div class="container">
      <form action="/admin/add-product" method="POST">
        <div class="form-group  justify-content-center mx-5 my-3">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" name="title"  placeholder="Enter title">
        </div>
        <div class="form-group  justify-content-center mx-5 my-3">
          <label for="imageUrl">Image Url</label>
          <input type="text" class="form-control" id="imageUrl" name="imageUrl"  placeholder="Enter Image Url">
        </div>
         <div class="form-group  justify-content-center mx-5 my-3">
          <label for="price">Price</label>
          <input type="number" class="form-control" id="price" name="price"  placeholder="Enter Price">
        </div>
        <div class="form-group  justify-content-center mx-5 my-3">
          <label for="description">Description</label>
         
          <textarea name="description" id="description" class="form-control" rows="5"  ></textarea>
        </div>
        <button class="btn btn-outline-primary my-2 my-sm-0 mx-5" type="submit">Add Product</button>
      </form>
      </div>
      <%- include('../includes/end.ejs') %>